<AjustePage>:

    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Seu ID Ãºnico: 1"
            id: id_vendedor

        # MUDAR FOTO PERFIL
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.7}
            size_hint: 0.5, 0.15
            source: "icones/foto_perfil.PNG"
            on_release: app.mudar_tela("fotoperfilpage")
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.5, 0.15
            text: "Mudar foto de perfil"
            on_release: app.mudar_tela("fotoperfilpage")

        # ADICIONAR VENDEDOR
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.5}
            size_hint: 0.5, 0.15
            source: "icones/adicionar_vendedor.png"
            on_release: app.mudar_tela("adicionarvendedorpage")
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.5}
            size_hint: 0.5, 0.15
            text: "Ir para tela Acompanhar vendedor"
            on_release: app.mudar_tela("adicionarvendedorpage")

        # VER TODAS AS VENDAS
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.3}
            size_hint: 0.5, 0.15
            source: "icones/vendas_empresa.png"
            on_release: app.carregar_todas_vendas()
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.3}
            size_hint: 0.5, 0.15
            text: "Ver todas as Vendas"
            on_release: app.carregar_todas_vendas()

        # VOLTAR
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.13}
            size_hint: 1, 0.13
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")