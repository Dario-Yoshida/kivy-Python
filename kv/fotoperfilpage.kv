<FotoPerfilPage>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.1
            bold: True
            text: "Selecione sua Foto de Perfil"

        # LISTA DE FOTOS
        ScrollView:
            pos_hint: {"right": 0.9, "top": 0.85}
            size_hint: 0.8, 0.73
            GridLayout:
                id: lista_fotos_perfil
                cols: 3
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # VOLTAR
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.13}
            size_hint: 1, 0.13
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustepage")